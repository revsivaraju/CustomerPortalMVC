@model IEnumerable<CustomerPortalMVC.Models.StockDetail>

@{
    ViewData["Title"] = "ViewStockDetails";
}
     <style>
    hr {
        height: 1px;
        background-color: white;
        border: none;
    }
</style>

<div class="container">
    <div class="row ">
        <div class="col-md-4"></div>
        <div class="col-md-4" >
            <div class="btn-group" id="myDIV">
                @*<button type="button" class="btn btn-outline-primary">@Html.ActionLink("Stock", "ViewStockDetails", "Customer")</button>
        <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Mutual Funds", "ViewMutualFundDetails", "Customer")</button>
        <button type="button" class="btn btn-outline-primary">@Html.ActionLink("NetWorth", "ViewNetWorth", "Customer")</button>*@
                <a class="btn btn-outline-primary active" href="/Customer/ViewStockDetails">Stocks</a>
                <a class="btn btn-outline-primary" href="/Customer/ViewMutualFundDetails">Mutual Funds</a>
                <a class="btn btn-outline-primary" href="/Customer/ViewNetWorth">NetWorth</a>
            </div>
        </div>
    </div>
</div>

<center>
    <div class="col-md-4">
        <br /><h2 class="text-success">Stock Details</h2><hr /><br />
    </div>
</center>

<table class="table">
    <thead>
        <tr>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.StockName)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.StockCount)
            </th>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.StockName)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.StockCount)
            </td>
            <td class="text-white">
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.ActionLink("Sell", "SellStock", "Customer", new { id = item.TStockId }, new { @class = "btn btn-success", onclick = "return confirm('Are u sure to sell this Stock')" })

            </td>
        </tr>
        }
    </tbody>
</table>

